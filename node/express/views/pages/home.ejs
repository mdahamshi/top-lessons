<h1>
  Welcome to the
  <%= appName %>
</h1>

<ul class="user-list">
  <% if (locals.users) {%> <% users.forEach(user => { %>
  <li>
    <article>
      ID:
      <%= user.id %>, Name:
      <%= user.firstName %>
      <%= user.lastName %>
      <div>
        <a role="button" href="/<%= user.id %>/update">Update</a>
        <form
          action="/<%= user.id %>/delete"
          method="POST"
          style="display: inline"
        >
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this user?');"
          >
            Delete
          </button>
        </form>
      </div>
    </article>
  </li>
  <% }); %>
  <% } %>
</ul>
<a href="/create">Create a user</a>
